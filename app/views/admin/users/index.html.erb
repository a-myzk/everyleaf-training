<h3>【管理】</h3>
<h3>ユーザーの一覧</h3>

<table  class="table">
  <thead>
    <tr>
      <th>ユーザID</th>
      <th>ユーザ名</th>
      <th>タスク数</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td class="user_list"><%= user.id %></td>
        <td class="user_list"><%= user.name %></td>
        <td class="user_list"><%= user.tasks.count %></td>
        <td><button type="button" class="btn btn-outline-primary"><%= link_to "詳細", admin_user_path(user.id) %></button></td>
        <td><button type="button" class="btn btn-outline-success"><%= link_to "編集", edit_admin_user_path(user.id) %></button></td>
        <td><button type="button" class="btn btn-outline-danger"><%= link_to "削除", admin_user_path(user.id), method: :delete, data: { confirm: "本当に削除しますか？" } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'タスク一覧へもどる', tasks_path %>
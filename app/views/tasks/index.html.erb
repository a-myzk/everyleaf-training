<%= notice %>

<h1>タスク一覧</h1>

<br>

<%#= link_to "New book", new_book_path %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= link_to "詳しく見る", task %></td>
        <td><%#= link_to "Edit", edit_book_path(book) %></td>
        <td><%#= link_to "Destroy", book, method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>